#!/bin/bash
# set up for instance 0 -->
instance_id=0
${VEGAS_DIR}/bin/vegas_init_shmem $instance_id
python2.7 ${VEGAS_DIR}/python/vegas_set_params.py -D --nogbt \
    --instance_id=$instance_id
python2.7 ${VEGAS_DIR}/python/vegas_set_params.py -U --nogbt \
    --host=10.0.0.4     \
    --port=60000        \
    --packets=SPEAD     \
    --npol=2		    \
    --nchan=1024        \
    --chan_bw=585.938e3 \
    --nsubband=1        \
    --sub0freq=2.4e9    \
    --exposure=2e-5    \
    --fpgaclk=150e6     \
    --efsampfr=1.2e9    \
    --hwexposr=0.5e-3   \
    --obsmode=HBW       \
    --instance_id=$instance_id

# set up for instance 1 -->
instance_id=1
${VEGAS_DIR}/bin/vegas_init_shmem $instance_id
python2.7 ${VEGAS_DIR}/python/vegas_set_params.py -D --nogbt \
    --instance_id=$instance_id
python2.7 ${VEGAS_DIR}/python/vegas_set_params.py -U --nogbt \
    --host=10.0.0.5     \
    --port=60000        \
    --packets=SPEAD     \
    --npol=2		    \
    --nchan=1024        \
    --chan_bw=585.938e3 \
    --nsubband=1        \
    --sub0freq=3.4e9    \
    --exposure=2e-5    \
    --fpgaclk=150e6     \
    --efsampfr=1.2e9    \
    --hwexposr=0.5e-3   \
    --obsmode=HBW       \
    --instance_id=$instance_id
