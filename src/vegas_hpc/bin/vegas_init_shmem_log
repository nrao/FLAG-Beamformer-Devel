#! /bin/bash
if test "${VEGAS_DIR}zz" = zz; then
	echo "Error: VEGAS_DIR environment variable not set, exiting."
	exit 1
fi
# Set up status buffer
$VEGAS_DIR/bin/check_vegas_status >& vegas_status.log
# Set up first (GPU) data buffer
$VEGAS_DIR/bin/check_vegas_databuf -c -i1 -n32 -s32768 -t1 >& vegas_databuf_1.log
# Set up second (CPU_ACCUM) data buffer
$VEGAS_DIR/bin/check_vegas_databuf -c -i2 -n32 -s32768 -t2 >& vegas_databuf_2.log
# Set up third (DISK) data buffer
$VEGAS_DIR/bin/check_vegas_databuf -c -i3 -n24 -s16384 -t3 >& vegas_databuf_3.log
# Display status of buffers
# $VEGAS_DIR/bin/check_vegas_status
