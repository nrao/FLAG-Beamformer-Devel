#!/bin/bash
${GUPPI_DIR}/bin/vegas_init_shmem 
python ${GUPPI_DIR}/python/guppi_set_params.py -D --nogbt
python ${GUPPI_DIR}/python/guppi_set_params.py -U --nogbt \
    --host=localhost    \
    --packets=SPEAD     \
    --npol=2		    \
    --nchan=1024        \
    --chan_bw=1465      \
    --nsubband=1        \
    --sub0freq=2.4e9    \
    --exposure=2e-3     \
    --pfbrate=1e5       \
 
