#!/bin/bash
${GUPPI_DIR}/bin/vegas_init_shmem 
python2.5 ${GUPPI_DIR}/python/guppi_set_params.py -D --nogbt
python2.5 ${GUPPI_DIR}/python/guppi_set_params.py -U --nogbt \
    --host=10.0.0.4     \
    --port=60000        \
    --packets=SPEAD     \
    --npol=2		    \
    --nchan=32768       \
    --chan_bw=2288.8    \
    --nsubband=1        \
    --sub0freq=2.4e9    \
    --exposure=20e-3    \
    --fpgaclk=150e6     \
    --efsampfr=150e6    \
    --hwexposr=10e-3    \
 
